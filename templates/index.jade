-var space = " "
doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='Nitin Jaglan', content='Codeforces data for #{user}')
    link(rel='icon', href='../../favicon.ico')
    title Codeforces data for #{user}
    // Bootstrap core CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/codeforces.css', rel='stylesheet')
  body
    div.wrapper
      nav.navbar.navbar-default.navbar-static-top
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') Codeforces Data
      .container
        div#newhandleform(class="modal fade", tabindex="-1", role="dialog", aria-hidden="true")
          .modal-dialog
            .modal-content
              .modal-header
                button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                  span(aria-hidden="true")
                  | &times;
                h4(class="modal-title")
                  | Add new handle
              .modal-body
                form(class="form-horizontal" action="/addhandle")
                  div.form-group
                    label(for="handle", class="col-sm-2 control-label")
                      | Handle
                    div.col-sm-10
                      input(type="text" class="form-control" name="handle" id="handle" placeholder="Valid codeforces handle")
                  div.form-group
                    div(class="col-sm-offset-2 col-sm-10")
                      button(type="submit" class="btn btn-primary pull-right")
                        | Add handle
        a(class="pull-right btn btn-primary" data-toggle="modal" data-target="#newhandleform")
          span(class="glyphicon glyphicon-plus" aria-hidden="true")
          |   Add handle
        each profile in profiles
          a(class="btn btn-primary", href="profiles/#{profile}") #{profile}
          | #{space}
    footer.footer
      .container
        p.text-muted Made using node.js(jsdom,request,jade)
    script(src="http://code.jquery.com/jquery.js")
    script(src='/js/bootstrap.min.js')
    script(src='/js/codeforces.js')